<?xml version="1.0" encoding="UTF-8"?>
<plugin>

   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="ch.droptilllate.application"
            application="org.eclipse.e4.ui.workbench.swt.E4Application">
         <property
               name="applicationCSS"
               value="platform:/plugin/ch.droptilllate.application/css/default.css">
         </property>
         <property
               name="appName"
               value="ch.droptilllate.application">
         </property>
         <property
               name="aboutImage"
               value="/icons/icon_128x128.png">
         </property>
         <property
               name="aboutText"
               value="Copyright by Marco Betschart &amp; RÃ©ne Amrhein">
         </property>
         <property
               name="windowImages"
               value="/icons/icon_16x16.png,/icons/icon_32x32.png,/icons/icon_48x48.png,/icons/icon_64x64.png,/icons/icon_128x128.png">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="ch.droptilllate.application.selectionset">
         <with
               variable="org.eclipse.ui.selection">
            <iterate
                  ifEmpty="false"
                  operator="or">
               <or>
                  <instanceof
                        value="ch.droptilllate.application.model.GhostFolderDob">
                  </instanceof>
                  <instanceof
                        value="ch.droptilllate.application.model.EncryptedFileDob">
                  </instanceof>
               </or>
            </iterate>
         </with>
      </definition>
   </extension>

</plugin>
